<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.justgraduationproject.android.recommendations.ActivitiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_default_pixel"
        android:paddingBottom="@dimen/activity_default_pixel"
        android:layout_marginBottom="@dimen/activity_default_pixel"
        android:background="@android:color/white"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Profile_activities"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/font_default"
            android:padding="@dimen/activity_default_pixel"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/chart"
            android:contentDescription="@string/Description" />

    </LinearLayout>

</LinearLayout>